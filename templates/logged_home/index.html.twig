{% extends 'bottomMenu.twig' %}

{% block title %}Hello LoggedHomeController!{% endblock %}

{% block body %}
<style>
:root {
        --font-title: outfitR;
        --font-main: jeju, serif;
        --color-bg: #FBF3D1;
        --color-heading: #463F33;
    }

    * {
        margin: 0;
        padding: 0;
    }

    @font-face {
        font-family: jeju;
        src: url("fonts/jeju/JejuMyeongjo-Regular.ttf");
    }

    @font-face {
        font-family: outfitR;
        src: url("fonts/outfit/Outfit-Regular.ttf");
    }

    .bg {
        min-height: 100vh;
        background-color: var(--color-bg);
        padding: 5rem 2rem;
        padding-bottom: 10rem; /* Space for bottom menu */
    }

    h1 {
        font-family: var(--font-title);
        color: var(--color-heading);
        font-size: 3rem;
        margin-bottom: 3rem;
    }

    .list {
        border-bottom: 2px solid var(--color-heading);
        margin-bottom: 2rem;
        padding-bottom: 1rem;
    }

    h2 {
        font-family: var(--font-main);
        letter-spacing: 0.175rem;
        color: var(--color-heading);
        margin-bottom: 1rem;
    }

    .books-container {
        display: flex;
        flex-direction: row;
        flex-wrap: wrap;
        gap: 1rem;
        margin-top: 1rem;
    }

    .book-item {
        display: flex;
        flex-direction: column;
        align-items: center;
        width: 100px;
        gap: 0.5rem;
        padding: 0.75rem;
        background-color: rgba(255, 255, 255, 0.5);
        border-radius: 3px;
        border: 1px solid rgba(70, 63, 51, 0.2);
        cursor: pointer;
    }

    .book-cover {
        width: 100%;
        aspect-ratio: 2/3;
        object-fit: cover;
        border-radius: 4px;
        background-color: var(--color-heading);
        display: flex;
        align-items: center;
        justify-content: center;
        color: var(--color-bg);
        font-size: 0.6rem;
        text-align: center;
        padding: 0.25rem;
        box-sizing: border-box;
        overflow: hidden;
    }

    .book-cover img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        border-radius: 4px;
    }

    .book-info {
        width: 100%;
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;
    }

    .book-title {
        font-family: var(--font-main);
        font-size: 0.85rem;
        color: var(--color-heading);
        font-weight: bold;
        line-height: 1.2;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .empty-state {
        font-family: var(--font-main);
        color: var(--color-heading);
        opacity: 0.5;
        font-style: italic;
        padding: 1rem 0;
    }
</style>

 <div class="bg">
        <h1>
            Welcome
            {% if app.user and app.user.username %}
                {{ app.user.username }}
            {% endif %}
        </h1>
        <div class="list">
            <h2>
                Current Readings
            </h2>
        </div>
        <div class="list">
            <h2>
                To Read
            </h2>
            <div class="books-container">
                {% if userBooks|length > 0 %}
                    {% for userBook in userBooks %}
                        {% set book = userBook.book %}
                        <a href="{{ path('app_book_show', {id: book.id}) }}" style="text-decoration: none; color: inherit;">
                            <div class="book-item">
                                <div class="book-cover">
                                    {% if book.coverImage %}
                                        <img src="{{ book.coverImage }}" alt="{{ book.title }} cover">
                                    {% else %}
                                        <span>{{ book.title|slice(0, 3)|upper }}</span>
                                    {% endif %}
                                </div>
                                <div class="book-info">
                                    <div class="book-title">{{ book.title }}</div>
                                </div>
                            </div>
                        </a>
                    {% endfor %}
                {% else %}
                    <div class="empty-state">No books in your collection yet. Add one using the + button!</div>
                {% endif %}
            </div>
        </div>
        <div class="list">
            <h2>
                Finished
            </h2>
        </div>
    </div>
{% endblock %}

{% extends 'bottomMenu.twig' %}

{% block title %}Turner | My Collection{% endblock %}

{% block body %}
<style>
:root {
        --font-title: outfitR;
        --font-main: jeju, serif;
        --color-bg: #FBF3D1;
        --color-heading: #463F33;
    }

    * {
        margin: 0;
        padding: 0;
    }

    @font-face {
        font-family: jeju;
        src: url("fonts/jeju/JejuMyeongjo-Regular.ttf");
    }

    @font-face {
        font-family: outfitR;
        src: url("fonts/outfit/Outfit-Regular.ttf");
    }

    .bg {
        min-height: 100vh;
        background-color: var(--color-bg);
        padding: 5rem 2rem 10rem 2rem;
    }

    h1 {
        font-family: jeju, serif;
        color: var(--color-heading);
        font-size: 3rem;
        margin-bottom: 3rem;
    }

    .books-container {
        display: flex;
        flex-direction: row;
        flex-wrap: wrap;
        gap: 1rem;
        margin-top: 1rem;
    }

    .book-item {
        display: flex;
        flex-direction: column;
        align-items: center;
        width: 100px;
        gap: 0.5rem;
        cursor: pointer;
    }

    .book-cover {
        width: 100%;
        aspect-ratio: 2/3;
        object-fit: cover;
        border-radius: 4px;
        background-color: var(--color-heading);
        display: flex;
        align-items: center;
        justify-content: center;
        color: var(--color-bg);
        font-size: 0.6rem;
        text-align: center;
        padding: 0.25rem;
        box-sizing: border-box;
        overflow: hidden;
    }

    .book-cover img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        border-radius: 4px;
    }

    .book-info {
        width: 100%;
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;
    }

    .book-title {
        font-family: outfitR, sans-serif;
        font-size: 0.85rem;
        color: var(--color-heading);
        font-weight: bold;
        line-height: 1.2;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .empty-state {
        font-family: jeju, serif;
        color: var(--color-heading);
        opacity: 0.5;
        font-style: italic;
        padding: 2rem 0;
        text-align: center;
        font-size: 1.2rem;
    }

    .collection-header {
        margin-bottom: 2rem;
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        gap: 1rem;
        flex-wrap: wrap;
    }

    .collection-title-wrapper {
        flex: 1;
    }

    .collection-count {
        font-family: outfitR, sans-serif;
        font-size: 1rem;
        color: var(--color-heading);
        opacity: 0.7;
        margin-top: 0.5rem;
    }

    .sort-controls {
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }

    .sort-label {
        font-family: outfitR, sans-serif;
        font-size: 0.9rem;
        color: var(--color-heading);
        opacity: 0.8;
    }

    .sort-select {
        padding: 0.5rem 0.75rem;
        border: 2px solid var(--color-heading);
        border-radius: 8px;
        background-color: var(--color-bg);
        color: var(--color-heading);
        font-family: jeju, serif;
        font-size: 0.9rem;
        cursor: pointer;
        outline: none;
        transition: background-color 0.2s ease;
    }

    .sort-select:hover {
        background-color: rgba(70, 63, 51, 0.05);
    }

    .sort-select:focus {
        background-color: rgba(70, 63, 51, 0.1);
    }
</style>

<div class="bg">
    <div class="collection-header">
        <div class="collection-title-wrapper">
            <h1>My Collection</h1>
            {% if userBooks|length > 0 %}
                <div class="collection-count">{{ userBooks|length }} book{{ userBooks|length > 1 ? 's' : '' }}</div>
            {% endif %}
        </div>
        {% if userBooks|length > 0 %}
            <div class="sort-controls">
                <label for="sort-select" class="sort-label">Sort by:</label>
                <select id="sort-select" class="sort-select" onchange="window.location.href='{{ path('app_collection') }}?sort=' + this.value">
                    <option value="date_desc" {% if currentSort == 'date_desc' %}selected{% endif %}>Date Added (Newest)</option>
                    <option value="date_asc" {% if currentSort == 'date_asc' %}selected{% endif %}>Date Added (Oldest)</option>
                    <option value="name_asc" {% if currentSort == 'name_asc' %}selected{% endif %}>Title (A-Z)</option>
                    <option value="name_desc" {% if currentSort == 'name_desc' %}selected{% endif %}>Title (Z-A)</option>
                </select>
            </div>
        {% endif %}
    </div>
    
    <div class="books-container">
        {% if userBooks|length > 0 %}
            {% for userBook in userBooks %}
                {% set book = userBook.book %}
                <a href="{{ path('app_book_show', {id: book.id}) }}" style="text-decoration: none; color: inherit;">
                    <div class="book-item">
                        <div class="book-cover">
                            {% if book.coverImage %}
                                <img src="{{ book.coverImage }}" alt="{{ book.title }} cover">
                            {% else %}
                                <span>{{ book.title|slice(0, 3)|upper }}</span>
                            {% endif %}
                        </div>
                        <div class="book-info">
                            <div class="book-title">{{ book.title }}</div>
                        </div>
                    </div>
                </a>
            {% endfor %}
        {% else %}
            <div class="empty-state">No books in your collection yet. Add one using the + button!</div>
        {% endif %}
    </div>
</div>
{% endblock %}


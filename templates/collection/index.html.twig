{% extends 'bottomMenu.twig' %}

{% block title %}Turner | My Collection{% endblock %}

{% block body %}
<style>
:root {
        --font-title: outfitR;
        --font-main: jeju, serif;
        --color-bg: #FBF3D1;
        --color-heading: #463F33;
    }

    * {
        margin: 0;
        padding: 0;
    }

    @font-face {
        font-family: jeju;
        src: url("fonts/jeju/JejuMyeongjo-Regular.ttf");
    }

    @font-face {
        font-family: outfitR;
        src: url("fonts/outfit/Outfit-Regular.ttf");
    }

    .bg {
        min-height: 100vh;
        background-color: var(--color-bg);
        padding: 5rem 2rem 10rem 2rem;
    }

    h1 {
        font-family: jeju, serif;
        color: var(--color-heading);
        font-size: 3rem;
        margin-bottom: 3rem;
    }

    .books-container {
        display: flex;
        flex-direction: row;
        flex-wrap: wrap;
        gap: 1rem;
        margin-top: 1rem;
    }

    .book-item {
        display: flex;
        flex-direction: column;
        align-items: center;
        width: 100px;
        gap: 0.5rem;
        cursor: pointer;
    }

    .book-cover {
        width: 100%;
        aspect-ratio: 2/3;
        object-fit: cover;
        border-radius: 4px;
        background-color: var(--color-heading);
        display: flex;
        align-items: center;
        justify-content: center;
        color: var(--color-bg);
        font-size: 0.6rem;
        text-align: center;
        padding: 0.25rem;
        box-sizing: border-box;
        overflow: hidden;
    }

    .book-cover img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        border-radius: 4px;
    }

    .book-info {
        width: 100%;
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;
    }

    .book-title {
        font-family: outfitR, sans-serif;
        font-size: 0.85rem;
        color: var(--color-heading);
        font-weight: bold;
        line-height: 1.2;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .empty-state {
        font-family: jeju, serif;
        color: var(--color-heading);
        opacity: 0.5;
        font-style: italic;
        padding: 2rem 0;
        text-align: center;
        font-size: 1.2rem;
    }

    .collection-header {
        margin-bottom: 2rem;
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        gap: 1rem;
        flex-wrap: wrap;
    }

    .collection-title-wrapper {
        flex: 1;
    }

    .collection-count {
        font-family: outfitR, sans-serif;
        font-size: 1rem;
        color: var(--color-heading);
        opacity: 0.7;
        margin-top: 0.5rem;
    }

    .sort-controls {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        flex-wrap: wrap;
    }

    .control-group {
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .sort-label {
        font-family: outfitR, sans-serif;
        font-size: 0.9rem;
        color: var(--color-heading);
        opacity: 0.8;
    }

    .sort-select {
        padding: 0.5rem 0.75rem;
        border: 2px solid var(--color-heading);
        border-radius: 8px;
        background-color: var(--color-bg);
        color: var(--color-heading);
        font-family: jeju, serif;
        font-size: 0.9rem;
        cursor: pointer;
        outline: none;
        transition: background-color 0.2s ease;
    }

    .sort-select:hover {
        background-color: rgba(70, 63, 51, 0.05);
    }

    .sort-select:focus {
        background-color: rgba(70, 63, 51, 0.1);
    }

    .group-section {
        margin-bottom: 2.5rem;
    }

    .group-header {
        font-family: jeju, serif;
        font-size: 1.5rem;
        color: var(--color-heading);
        margin-bottom: 1rem;
        padding-bottom: 0.5rem;
        border-bottom: 2px solid var(--color-heading);
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .group-count {
        font-family: outfitR, sans-serif;
        font-size: 0.9rem;
        color: var(--color-heading);
        opacity: 0.6;
        font-weight: normal;
    }

    .group-books {
        display: flex;
        flex-direction: row;
        flex-wrap: wrap;
        gap: 1rem;
    }
</style>

<div class="bg">
    <div class="collection-header">
        <div class="collection-title-wrapper">
            <h1>My Collection</h1>
            {% if userBooks|length > 0 %}
                <div class="collection-count">{{ userBooks|length }} book{{ userBooks|length > 1 ? 's' : '' }}</div>
            {% endif %}
        </div>
        {% if userBooks|length > 0 %}
            <div class="sort-controls">
                <div class="control-group">
                    <label for="sort-select" class="sort-label">Sort by:</label>
                    <select id="sort-select" class="sort-select" onchange="updateUrl('sort', this.value)">
                        <option value="date_desc" {% if currentSort == 'date_desc' %}selected{% endif %}>Date Added (Newest)</option>
                        <option value="date_asc" {% if currentSort == 'date_asc' %}selected{% endif %}>Date Added (Oldest)</option>
                        <option value="name_asc" {% if currentSort == 'name_asc' %}selected{% endif %}>Title (A-Z)</option>
                        <option value="name_desc" {% if currentSort == 'name_desc' %}selected{% endif %}>Title (Z-A)</option>
                    </select>
                </div>
                <div class="control-group">
                    <label for="group-select" class="sort-label">Group by:</label>
                    <select id="group-select" class="sort-select" onchange="updateUrl('group_by', this.value)">
                        <option value="" {% if currentGroupBy is empty %}selected{% endif %}>None</option>
                        <option value="author" {% if currentGroupBy == 'author' %}selected{% endif %}>Author</option>
                        <option value="editor" {% if currentGroupBy == 'editor' %}selected{% endif %}>Publisher/Editor</option>
                    </select>
                </div>
            </div>
        {% endif %}
    </div>
    
    {% if userBooks|length > 0 %}
        {% if groupedBooks %}
            {# Display grouped books #}
            {% for groupName, groupUserBooks in groupedBooks %}
                <div class="group-section">
                    <div class="group-header">
                        <span>{{ groupName ?: 'Unknown' }}</span>
                        <span class="group-count">({{ groupUserBooks|length }} book{{ groupUserBooks|length > 1 ? 's' : '' }})</span>
                    </div>
                    <div class="group-books">
                        {% for userBook in groupUserBooks %}
                            {% set book = userBook.book %}
                            <a href="{{ path('app_book_show', {id: book.id}) }}" style="text-decoration: none; color: inherit;">
                                <div class="book-item">
                                    <div class="book-cover">
                                        {% if book.coverImage %}
                                            <img src="{{ book.coverImage }}" alt="{{ book.title }} cover">
                                        {% else %}
                                            <span>{{ book.title|slice(0, 3)|upper }}</span>
                                        {% endif %}
                                    </div>
                                    <div class="book-info">
                                        <div class="book-title">{{ book.title }}</div>
                                    </div>
                                </div>
                            </a>
                        {% endfor %}
                    </div>
                </div>
            {% endfor %}
        {% else %}
            {# Display ungrouped books #}
            <div class="books-container">
                {% for userBook in userBooks %}
                    {% set book = userBook.book %}
                    <a href="{{ path('app_book_show', {id: book.id}) }}" style="text-decoration: none; color: inherit;">
                        <div class="book-item">
                            <div class="book-cover">
                                {% if book.coverImage %}
                                    <img src="{{ book.coverImage }}" alt="{{ book.title }} cover">
                                {% else %}
                                    <span>{{ book.title|slice(0, 3)|upper }}</span>
                                {% endif %}
                            </div>
                            <div class="book-info">
                                <div class="book-title">{{ book.title }}</div>
                            </div>
                        </div>
                    </a>
                {% endfor %}
            </div>
        {% endif %}
    {% else %}
        <div class="empty-state">No books in your collection yet. Add one using the + button!</div>
    {% endif %}
</div>

<script>
function updateUrl(param, value) {
    const url = new URL(window.location.href);
    const sortSelect = document.getElementById('sort-select');
    const groupSelect = document.getElementById('group-select');
    
    // Update the parameter
    if (param === 'sort') {
        url.searchParams.set('sort', value);
    } else if (param === 'group_by') {
        if (value) {
            url.searchParams.set('group_by', value);
        } else {
            url.searchParams.delete('group_by');
        }
    }
    
    // Preserve the other parameter
    if (param === 'sort' && groupSelect.value) {
        url.searchParams.set('group_by', groupSelect.value);
    } else if (param === 'group_by' && sortSelect.value) {
        url.searchParams.set('sort', sortSelect.value);
    }
    
    window.location.href = url.toString();
}
</script>
{% endblock %}


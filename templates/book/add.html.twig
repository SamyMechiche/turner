{% extends 'bottomMenu.twig' %}

{% block title %}Add Book{% endblock %}

{% block stylesheets %}
<style>
    @font-face {
        font-family: jeju;
        src: url("fonts/jeju/JejuMyeongjo-Regular.ttf");
    }

    :root {
        --color-bg: #FBF3D1;
        --color-border: #D4C5A9;
        --color-text: #8B7355;
        --color-heading: #463F33;
        --color-button-dark: #463F33;
        --color-button-text: #FBF3D1;
    }

    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        background-color: var(--color-bg);
        font-family: serif;
        min-height: 100vh;
        padding: 2rem 1.5rem;
        padding-bottom: 8rem; /* Space for bottom menu */
    }

    .add-book-container {
        max-width: 500px;
        margin: 0 auto;
    }

    .header {
        display: flex;
        align-items: center;
        margin-bottom: 2rem;
        position: relative;
    }

    .back-arrow {
        position: absolute;
        left: 0;
        cursor: pointer;
        font-size: 2rem;
        color: var(--color-heading);
        text-decoration: none;
        display: flex;
        align-items: center;
        justify-content: center;
        width: 32px;
        height: 32px;
    }

    .back-arrow:hover {
        opacity: 0.7;
    }

    .add-book-title {
        flex: 1;
        text-align: center;
        font-family: jeju, serif;
        font-size: 2rem;
        color: var(--color-heading);
        font-weight: normal;
    }

    .form-group {
        margin-bottom: 1.5rem;
    }

    .form-group label {
        display: none;
    }

    .form-group input[type="text"],
    .form-group input[type="url"],
    .form-group input[type="number"] {
        width: 100%;
        padding: 0.875rem 1rem;
        border: 2px solid var(--color-border);
        border-radius: 8px;
        background-color: var(--color-bg);
        font-size: 1rem;
        color: var(--color-text);
        font-family: jeju, serif;
        outline: none;
        transition: border-color 0.2s;
    }

    .form-group input[type="text"]:focus,
    .form-group input[type="url"]:focus,
    .form-group input[type="number"]:focus {
        border-color: var(--color-heading);
    }

    .form-group input::placeholder {
        color: var(--color-text);
        opacity: 0.7;
    }

    .form-errors {
        color: #d32f2f;
        margin-bottom: 1rem;
        font-size: 0.875rem;
    }

    .alert {
        padding: 0.75rem;
        margin-bottom: 1rem;
        border-radius: 8px;
        font-size: 0.875rem;
    }

    .alert-success {
        background-color: #e8f5e9;
        color: #2e7d32;
    }

    .alert-warning {
        background-color: #fff3e0;
        color: #e65100;
    }

    .button-group {
        display: flex;
        gap: 1rem;
        margin-top: 2rem;
    }

    .btn-submit {
        flex: 1;
        padding: 0.875rem 1.5rem;
        background-color: var(--color-button-dark);
        color: var(--color-button-text);
        border: none;
        border-radius: 8px;
        font-size: 1rem;
        font-family: jeju, serif;
        cursor: pointer;
        transition: 
            background-color 0.2s, 
            color 0.2s, 
            border 0.2s, 
            opacity 0.2s;
    }

    .btn-submit:hover {
        background-color: var(--color-button-text);
        color: var(--color-button-dark);
        border: 2px solid var(--color-button-dark);
        opacity: 0.9;
    }

    .btn-submit:active {
        opacity: 0.8;
    }

    .btn-cancel {
        flex: 1;
        padding: 0.875rem 1.5rem;
        background-color: transparent;
        color: var(--color-text);
        border: 2px solid var(--color-border);
        border-radius: 8px;
        font-size: 1rem;
        font-family: jeju, serif;
        cursor: pointer;
        text-decoration: none;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: border-color 0.2s, color 0.2s;
    }

    .btn-cancel:hover {
        border-color: var(--color-heading);
        color: var(--color-heading);
    }

    @media (max-width: 480px) {
        body {
            padding-bottom: 8rem;
        }

        .add-book-title {
            font-size: 1.5rem;
        }
    }
</style>
{% endblock %}

{% block body %}
<div class="add-book-container">
    <div class="header">
        <a href="{{ path('app_logged_home') }}" class="back-arrow" aria-label="Back">‚Üê</a>
        <h1 class="add-book-title">Add Book</h1>
    </div>

    {% for message in app.flashes('success') %}
        <div class="alert alert-success" role="alert">{{ message }}</div>
    {% endfor %}

    {% for message in app.flashes('warning') %}
        <div class="alert alert-warning" role="alert">{{ message }}</div>
    {% endfor %}

    {% if bookForm.vars.errors|length > 0 %}
        <div class="form-errors">
            {{ form_errors(bookForm) }}
        </div>
    {% endif %}

    {{ form_start(bookForm, {'attr': {'class': 'add-book-form'}}) }}
        <div class="form-group">
            {{ form_widget(bookForm.title, {'attr': {'placeholder': 'Book Title *'}}) }}
            {{ form_errors(bookForm.title) }}
        </div>

        <div class="form-group">
            {{ form_widget(bookForm.author, {'attr': {'placeholder': 'Author (optional)'}}) }}
            {{ form_errors(bookForm.author) }}
        </div>

        <div class="form-group">
            {{ form_widget(bookForm.editor, {'attr': {'placeholder': 'Publisher/Editor (optional)'}}) }}
            {{ form_errors(bookForm.editor) }}
        </div>

        <div class="form-group">
            {{ form_widget(bookForm.total_pages, {'attr': {'placeholder': 'Total Pages *', 'min': '1'}}) }}
            {{ form_errors(bookForm.total_pages) }}
        </div>

        <div class="form-group">
            {{ form_widget(bookForm.cover_image, {'attr': {'placeholder': 'Cover Image URL (optional)'}}) }}
            {{ form_errors(bookForm.cover_image) }}
        </div>

        <div class="button-group">
            <button type="submit" class="btn-submit">Add Book</button>
            <a href="{{ path('app_logged_home') }}" class="btn-cancel">Cancel</a>
        </div>
    {{ form_end(bookForm) }}
</div>
{% endblock %}

